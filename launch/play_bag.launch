<launch>
  <arg name="bag_file" default="$(find turtlebot3_slam_3d)/subset2.bag"/>
  <arg name="use_zed"  default="true" doc="Set to false when using Intel Realsense D435"/>
  <arg name="delay"    default="0.0"/>
  <arg name="rate"     default="5.0"/>
  <arg name="zed_node_name"   default="zed_node" />


  <arg name="image_topic"             default="/zed/zed_node/rgb/image_rect_color" />
  <arg name="depth_topic"             default="/zed/zed_node/depth/depth_registered" />
  
  <include file="$(find turtlebot3_slam_3d)/launch/publish_model_zed.launch"/>

  <node name="rosbag_play" pkg="rosbag" type="play" args="$(arg bag_file) --clock -r $(arg rate) -d $(arg delay)">
    <remap from="$(arg image_topic)/compressed/throttled"         to="$(arg image_topic)/compressed"/>
    <remap from="$(arg depth_topic)/compressedDepth/throttled"    to="$(arg depth_topic)/compressedDepth"/>
  </node>

  <node name="republish" type="republish" pkg="image_transport" output="screen"
        args="compressed in:=$(arg image_topic) raw out:=$(arg image_topic)"/>

  <node name="republish_depth" type="republish" pkg="image_transport" output="screen"
        args="compressedDepth in:=$(arg depth_topic) raw out:=$(arg depth_topic)"/>

</launch>
